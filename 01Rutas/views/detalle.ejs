<%- include("templates/cabecera.ejs", {tituloWeb: 'Detalles del Pokemon' }) %>
    <%- include("templates/header.ejs") %>

        <div class="container">
            <h1>
                Detalles del Pokémon
            </h1>
            <button type="submit" class="btn btn-info btn-block">
                <a href="/Pokemon" class="nav-link px-2 ">
                    Volver
                </a>
            </button>
            <% if(error) { %>
                <%= message %>
                    <% } %>
                        <% if(!error) { %>
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th scope="col">ID</th>
                                        <th scope="col">Nombre</th>
                                        <th scope="col">Tipo</th>
                                        <th scope="col">Descripción</th>
                                        <th scope="col">Acción</th>
                                        <!-- Agrega aquí más encabezados de columna según necesites -->
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <th scope="row">
                                            <%= pokemon.id %>
                                        </th>
                                        <td>
                                            <%= pokemon.nombre %>
                                        </td>
                                        <td>
                                            <%= pokemon.tipo %>
                                        </td>
                                        <td>
                                            <%= pokemon.descripcion %>
                                        </td>
                                        <td>
                                            <button class="btn btn-danger btn-sm" data-id="<%= pokemon._id %>">
                                                Eliminar
                                            </button>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                            <% } %>
        </div>

        <%- include("templates/footer.ejs") %>